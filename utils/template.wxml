<!-- template.wxml -->
<template name="recommend">
  <!-- 此处渲染数据的时候就不需要使用 item.xxx了-->
  <view>
    <view style='flex-direction:row; align-items:center;display:flex;flex:1;padding-left:10px;'>
      <view style='flex-direction:row; align-items:center;display:flex;flex:1;'>
        <image style="width: 40px; height: 40px; background-color: #eeeeee;" src="{{profile_image}}"></image>
        <view style='flex-direction:column; margin-left:10px;'>
          <view>
            <text style='color:#000;font-size: 14px;'>{{name}}</text>
          </view>
          <view>
            <text style='color:#999;font-size: 12px;'>{{passtime}}</text>
          </view>
        </view>
        <image style='width: 30px; height: 30px; margin-left:10px;' src="../../pic/text.png"></image>
      </view>
      <image style='width: 20px; height: 20px;  float: right; padding-right:15px;' src="../../pic/nocollect.png"></image>
    </view>
    <text class="item">{{index}} {{text}}</text>
    <view class='split-line-text'></view>
    <image bindtap='previewImg' mode="aspectFill" style='height:200px,width:100%,background-color: #eeeeee;' src='{{image0}}'></image>
    <view class='split-line'></view>
  </view>
</template>

